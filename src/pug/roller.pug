.roller
  -
    difficultArray = ['?',1,2,3,4,5,6];
    actionDiceArrayShort = Array.from({ length: 10 }, (_, i) => i + 1);
    actionDiceArrayFull = Array.from({ length: 8 }, (_, i) => i + 11);
    damageDiceSizeArray = [1, 'd4', 'd6', 'd8', 'd12'];
    damageDiceArray = Array.from({ length: 12 }, (_, i) => i + 7);
  .roller__content
    .tabs
      +tab({group:'current-roll', key:'action-nl-dice', name:'action', checked: true})
      +tab({group:'current-roll', key:'damage-nl-dice', name:'damage'})
      +tab({group:'current-roll', key:'doom-nl-roll', name:'doom'})
    .section-separator.section-separator--vertical
    .tabbed
      .group.group--action.tab-content
        +picker({name:'roll-difficulty', required: true, options:difficultArray, label:{key:'difficulty'}, html:{class:'picker--simple'}})
        +rollpicker({name:'roll-action-dice', options:actionDiceArrayShort, others:actionDiceArrayFull, label:{key:'action-dice'}, html:{class:'rollpicker--simple'}})
      .group.group--damage.tab-content
        +picker({name:'roll-damage-dice', options:[1,2,3,4,5,6], others:damageDiceArray, label:{key:'damage-dice'}, html:{class:'rollpicker--simple'}})
        +rollpicker({name:'roll-damage-die-size', options:damageDiceSizeArray, label:{key:'die-size'}, html:{class:'picker--simple'}})
        .group.group--bonus
          +number-input({name:`roll-damage-bonus`, label:{key:'bonus'}, html:{class:'number-input--simple number-input--align-center labelled--top'}})
          +checkbox-input({name:`roll-damage-bonus-enabled`, value:'1', html:{class:'checkbox-input--simple'}})
      .group.group--doom.tab-content
        input.current(type='hidden' name='attr_doom-points')
        +rollpicker({name:'roll-doom-die', options:[1,2,3,4,5,6], label:{key:'points-left'}, html:{class:'rollpicker--simple'}})
  .roller__toggle
    img.d10(src=`${imgServer}/mperes/Blood-and-Doom/refs/heads/main/static/d10die.svg` data-i18n-alt='d10')
    input(type='checkbox' name='attr_roller-open' value='1')